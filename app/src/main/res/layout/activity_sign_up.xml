<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppBackground"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/righteous"
        android:text="@string/app_name"
        android:textColor="@color/LogoColour"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="36dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/righteous"
        android:text="@string/slogan"
        android:textColor="@color/LogoColour"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="72dp"
        android:fontFamily="@font/righteous"
        android:text="@string/prompt_create_account"
        android:textColor="@color/colorTextHeadlines"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/righteous"
        android:text="@string/name"
        android:textColor="@color/LogoColour"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="211dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/righteous"
        android:text="@string/date_of_birth"
        android:textColor="@color/LogoColour"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="306dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/righteous"
        android:text="@string/prompt_email"
        android:textColor="@color/LogoColour"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="415dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="297dp"
        android:layout_height="32dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="455dp" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="297dp"
        android:layout_height="36dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="254dp" />

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="153dp"
        android:layout_height="54dp"
        android:background="@drawable/rounded_bottom_buttons"
        android:fontFamily="@font/righteous"
        android:text="@string/continue_button"
        android:textColor="@color/LogoColour"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="551dp" />

    <Button
        android:id="@+id/buttonHaveAccount"
        android:layout_width="154dp"
        android:layout_height="54dp"
        android:background="@drawable/rounded_bottom_buttons"
        android:fontFamily="@font/righteous"
        android:text="@string/have_an_account"
        android:textColor="@color/LogoColour"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="652dp" />

    <EditText
        android:id="@+id/editTextDate2"
        android:layout_width="299dp"
        android:layout_height="33dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="353dp" />

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:background="@color/colorTextHeadlines"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="231dp"
        tools:layout_editor_absoluteY="622dp" />

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:background="@color/colorTextHeadlines"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="622dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/righteous"
        android:text="@string/or_line"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="613dp" />


</androidx.constraintlayout.widget.ConstraintLayout>